{
  "variables_communes": {
    "codeDocument": {
      "label": "Numéro du document",
      "type": "text",
      "required": true,
      "placeholder": "Ex : DOC-2024-001",
      "icon": "description"
    },
    "entreprise": {
      "label": "Entreprise",
      "type": "text",
      "placeholder": "Ex: ACME Corp",
      "required": true,
      "icon": "business"
    },
    "civiliteDestinataire": {
      "label": "Civilité Destinataire",
      "type": "select",
      "options": ["Monsieur", "Madame", "Monsieur et Madame"],
      "required": true
    },
    "nomDestinataire": {
      "label": "Nom Destinataire",
      "type": "text",
      "required": false,
      "placeholder": "Ex: Dupont",
      "icon": "person"
    },
    "statutDestinataire": {
      "label": "Statut Destinataire",
      "type": "text",
      "required": false,
      "placeholder": "Ex: Président, Directeur...",
      "icon": "work"
    },
    "batiment": {
      "label": "Bâtiment",
      "type": "text",
      "required": false,
      "placeholder": "Ex: Bâtiment A",
      "icon": "apartment"
    },
    "adresse": {
      "label": "Adresse",
      "type": "text",
      "required": false,
      "placeholder": "Ex: 123 rue de la Paix",
      "icon": "place"
    },
    "cpVille": {
      "label": "Code postal + Ville",
      "type": "text",
      "required": false,
      "placeholder": "Ex: 75001 Paris",
      "icon": "location_city"
    },
    "emailDestinataire": {
      "label": "Email(s) destinataire(s)",
      "type": "email",
      "required": false,
      "description": "Plusieurs emails séparés par virgule",
      "placeholder": "contact@exemple.com",
      "icon": "email"
    },
    "signatureExp": {
      "label": "Secrétaire Fédéral",
      "type": "text",
      "required": false,
      "placeholder": "Ex: FO METAUX",
      "icon": "edit"
    }
  },
  "templates": {
    "designation": {
      "nom": "Lettre de Désignation",
      "fichier": "template_designation.docx",
      "description": "Désignation de délégué syndical",
      "variables_specifiques": {
        "numeroCourrier": {
          "label": "Numéro de Courrier",
          "type": "text",
          "required": true,
          "placeholder": "Ex: 2025-001",
          "icon": "tag"
        },
        "civiliteDelegue": {
          "label": "Civilité Délégué",
          "type": "select",
          "options": ["Monsieur", "Madame"],
          "required": true
        },
        "nomDelegue": {
          "label": "Nom Délégué",
          "type": "text",
          "required": true,
          "placeholder": "Ex: Martin Dupont",
          "icon": "person"
        },
        "emailDelegue": {
          "label": "Email Délégué",
          "type": "email",
          "required": false,
          "placeholder": "delegue@exemple.com",
          "icon": "email"
        },
        "civiliteRemplace": {
          "label": "Civilité Remplaçant",
          "type": "select",
          "options": ["Monsieur", "Madame"],
          "required": false
        },
        "nomRemplace": {
          "label": "Nom Remplaçant",
          "type": "text",
          "required": false,
          "placeholder": "Ex: Sophie Bernard",
          "icon": "person"
        }
      }
    },
    "negociation": {
      "nom": "Mandat de Négociation",
      "fichier": "template_negociation.docx",
      "description": "Mandat de négociation collective",
      "variables_specifiques": {
        "objet": {
          "label": "Objet du Mandat",
          "type": "text",
          "required": true,
          "placeholder": "Ex: Négociation accord temps de travail",
          "icon": "subject"
        },
        "civiliteDelegue": {
          "label": "Civilité Mandataire",
          "type": "select",
          "options": ["Monsieur", "Madame"],
          "required": true
        },
        "nomDelegue": {
          "label": "Nom Mandataire",
          "type": "text",
          "required": true,
          "placeholder": "Ex: Jean Durand",
          "icon": "person"
        },
        "emailDelegue": {
          "label": "Email Mandataire",
          "type": "email",
          "required": false,
          "placeholder": "mandataire@exemple.com",
          "icon": "email"
        }
      }
    }
  }
}
